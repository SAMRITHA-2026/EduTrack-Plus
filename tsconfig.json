{
  "compilerOptions": {
    "target": "ES2020", // Modern JS target
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // DOM + latest ES features
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true, // Enforce null safety
    "noEmit": true, // Next.js handles build output
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext", // Required for Next.js
    "moduleResolution": "node",
    "resolveJsonModule": true, // Allow JSON imports
    "isolatedModules": true,
    "jsx": "preserve", // Correct JSX for Next.js 13+
    "incremental": true,
    "baseUrl": ".", // Allow `@/` imports
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
